class Solution {
public:
    void ma(vector<vector<int>>& m,int begin,int end)
    {
        if(begin==end)return;
        int j1,j2,j3,j4;
        j1=m[begin][begin];
        j2=m[begin][end];
        j3=m[end][end];
        j4=m[end][begin];
        m[begin][begin]=j4;
        m[begin][end]=j1;
        m[end][end]=j2;
        m[end][begin]=j3;
        if(begin==(end-1))return;
        for(int i=begin+1;i<=end-1;i++)
        {
            int h1,h2,h3,h4;
            h1=m[begin][i];
            h2=m[i][end];
            h3=m[end][end-i+begin];
            h4=m[end-i+begin][begin];
            //i作为一般情况的考虑，begin非零时；------->以begin为0作为推导来推一般的规律，很难推明白。
           m[begin][i]=h4;
           m[i][end]=h1;
           m[end][end-i+begin]=h2;
           m[end-i+begin][begin]=h3;
        }
        ma(m,begin+1,end-1);
    }
    void rotate(vector<vector<int>>& matrix) {
        int n=matrix.size();
        ma(matrix,0,n-1);
    }
};
